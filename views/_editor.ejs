<div class="form-group row">
  <label class="col-form-label col-sm-2" for="username">Username</label>
  <div class="col-sm-8">
    <input
      autofocus
      class="form-control"
      name="username"
      value="<%= model.username %>"
    />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="email">Email</label>
  <div class="col-sm-7">
    <input class="form-control" name="email" value="<%= model.email %>" />
  </div>
</div>

<div class="form-group row">
  <label class="col-form-label col-sm-2" for="bio">Bio</label>
  <div class="col-sm-10">
    <textarea
      class="form-control"
      cols="20"
      name="bio"
      maxlength="32000"
      rows="7"
    >
<%= model.bio %></textarea
    >
  </div>
</div>
